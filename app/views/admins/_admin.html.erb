<div class="admin clearfix">
  <div class="pull-left col-md-4">
    <%= link_to admin.name, url_for(:controller => :admins, :action => :show, :id => admin.id) %>
    (<%= admin.org %>)
  </div>
  <div class="pull-left col-md-4">
    <%= pluralize(admin.site_count, 'site') %>
  </div>
  <div class="pull-left col-md-4 text-right">
    T: <%= admin.phone %>;
    E: <%= admin.email %>
  </div>
</div>
